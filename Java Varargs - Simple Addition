class Add
{
    void add(int ...a)
    {
        int sum =0;
        for(int i:a)
        {
            sum+=i;
        }
        int index=0;
        for(int i:a)
        {
            index++;
            if(a.length==index)
            {
                System.out.print(i+"=");
            }
            else
            {
               System.out.print(i+"+");
            }
        }
        System.out.println(""+sum);
    }
    
}
