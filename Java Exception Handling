class MyCalculator 
{
    long power(int n, int p) throws Exception 
    {
            long resultvalue=0;
            if(n==0 && p==0)
            {
                    throw new Exception("n and p should not be zero.");
            }
            if(n<0 || p<0)
            {
                    throw new Exception("n or p should not be negative.");
            }
        resultvalue=(long)Math.pow(n,p);
        return resultvalue;
    }
}
